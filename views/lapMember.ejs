            <div class="card">
            <div class="card-header">
            <h4>Laporan Data Member</h4>
            <button id="printButton">Print</button>
            <div class = "card-body">  
            <div class="table-responsive">
                <table id="memberTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Kode Member</th>
                            <th>Nama</th>
                            <th>Telepon</th>
                            <th>Alamat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% member.forEach(function(item) { %>
                            <tr>
                                <td><%= item.kode_member %></td>
                                <td><%= item.nama %></td>
                                <td><%= item.telepon %></td>
                                <td><%= item.alamat %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>

<script>
    $(document).ready(function () {
      $('#memberTable').DataTable();
    });
</script>
<script>
    document.getElementById('printButton').addEventListener('click', function() {
        // Sembunyikan elemen-elemen lain kecuali tabel
        var elementsToHide = document.querySelectorAll('body > *:not(.content-wrapper)');
        for (var i = 0; i < elementsToHide.length; i++) {
            elementsToHide[i].style.display = 'none';
        }

        // Cetak tabel
        window.print();

        // Kembalikan tampilan elemen-elemen yang disembunyikan
        for (var i = 0; i < elementsToHide.length; i++) {
            elementsToHide[i].style.display = '';
        }
    });
</script>
